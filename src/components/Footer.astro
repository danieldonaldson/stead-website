---
import { Image } from 'astro:assets';

// Import Instagram feed images
import oliviaImg from '../assets/img/olivia.jpg';
import jamesImg from '../assets/img/james.jpg';
import michaelImg from '../assets/img/michael.jpg';
import emilyImg from '../assets/img/emily.jpg';
import marieImg from '../assets/img/marie.jpg';
import usherImg from '../assets/img/usher.jpg';
import mikeImg from '../assets/img/mike.jpg';
import julieImg from '../assets/img/julie.jpg';
---

<footer class="footer footer-big footer-white">
  <div class="container">
    <div class="content">
      <div class="row">
        <div class="col-md-4">
          <h5>About Us</h5>
          <p>stead. Do less, get more</p>
          <p>A world where people spend less time doing things that don't matter.</p>
        </div>
        <div class="col-md-4">
          <h5>Social Feed</h5>
          <div class="social-feed">
            <div class="feed-line">
              <i class="fa fa-twitter"></i>
              <p>Coming soon...</p>
            </div>
            <div class="feed-line">
              <i class="fa fa-instagram"></i>
              <p>Check back shortly for our social feeds</p>
            </div>
            <div class="feed-line">
              <i class="fa fa-facebook-square"></i>
              <p>@steadafrica</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <h5>Instagram Feed</h5>
          <div class="gallery-feed">
            <Image src={oliviaImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
            <Image src={jamesImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
            <Image src={michaelImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
            <Image src={emilyImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
            <Image src={marieImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
            <Image src={usherImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
            <Image src={mikeImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
            <Image src={julieImg} alt="Instagram" width={100} height={100} format="webp" quality={80} />
          </div>
        </div>
      </div>
    </div>
    <hr />
    <div class="copyright pull-right">
      <span class="copyright">
        Â© <span id="current-year"></span> stead. All rights reserved
      </span>
    </div>
  </div>
</footer>
